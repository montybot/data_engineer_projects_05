# Admin Mongo (créé par l'image officielle au bootstrap)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change-me-root

# Base cible
MONGO_DBNAME=medical

# Comptes applicatifs (créés par 02_users_roles.js)
MONGO_APP_INGESTOR_USER=ingestor
MONGO_APP_INGESTOR_PASSWORD=change-me-ingestor
MONGO_APP_ANALYST_USER=analyst
MONGO_APP_ANALYST_PASSWORD=change-me-analyst
MONGO_APP_DBADMIN_USER=dbadmin
MONGO_APP_DBADMIN_PASSWORD=change-me-dbadmin

# URI pour la migration (utilise l'utilisateur d'ingestion)
MONGODB_URI=mongodb://ingestor:change-me-ingestor@mongo:27017/medical?authSource=admin

# Paramètres du job de migration
MIGRATION_COLLECTION=admissions
MIGRATION_FILE=/data/healthcare/healthcare-dataset.csv  # adapte après extraction
MIGRATION_ID_KEY=admission_id
MIGRATION_MAPPING=/app/config/admissions_mapping.json

# URL de téléchargement (pas d’API Kaggle nécessaire)
DATASET_URL=https://www.kaggle.com/api/v1/datasets/download/prasad22/healthcare-dataset

# Chemins de travail dans le conteneur
DATA_DIR=/data/healthcare
DATA_ZIP=/data/healthcare/healthcare-dataset.zip

# MIGRATION_FILE peut rester vide : le runner détecte le CSV après extraction
MIGRATION_FILE=

